<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ReportFragment">

    <EditText
        android:id="@+id/et_ReportText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tulis laporan anda disini..."
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/ivAttachImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/et_ReportText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/btnSubmitReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Laporan"
        android:layout_below="@id/et_ReportText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPreviousReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmitReport"
        android:layout_marginTop="16dp"/>

</RelativeLayout>